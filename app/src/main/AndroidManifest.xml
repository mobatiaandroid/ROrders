<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/restaurant_plate_small"
        android:roundIcon="@drawable/restaurant_plate_small"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="31">
        <activity
            android:name=".staff.StaffMainActivity"
            android:exported="false"
            android:theme="@style/Theme.ROrders"/>
        <activity
            android:name=".kitchen.KitchenMainActivity"
            android:exported="false"
            android:theme="@style/Theme.ROrders"/>
        <activity
            android:name=".admin.AdminMainActivity"
            android:exported="false"
            android:theme="@style/Theme.ROrders"/>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ROrders"/>
        <activity
            android:name=".splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.ROrders">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.ROrders" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>